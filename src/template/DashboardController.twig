                    <div class="col-12">
                        <h1>Dashboard</h1>
                        <p>The Dashboard shows all needed functions to use your Dairy.</p>
                    </div>
                </div>  
            </section>
            <section class="container">
                <div class="row">
                    <div class="col-12">
                        <form class="editorCreate" action="index.php" method="post">
                            <input name="Controller[title]" type="text" placeholder="Title" class="form-control" />
                            <input name="Controller[date]" type="date" class="form-control" />
                            <div id="editor"></div>
                            <input id="textCreate" type="hidden" name="Controller[text]" value="" />
                            <input type="hidden" name="Controller[name]" value="Dashboard" />
                            <input type="hidden" name="Controller[action]" value="create" />
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>   
                    </div>
                </div>
            </section>
            <section class="container">
                <div class="row">
                    <div class="col-12">
                        <h1>Last Entrances</h1>
                        
                        {% for item in items %}
                            <div class="entrance">
                                <h2>{{ item.title }}</h2>
                                <div class="date">
                                    {{ item.date }}
                                </div>
                                <div class="text">
                                    {{ item.text|raw }}
                                </div>
                            </div>
